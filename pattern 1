#include <bits/stdc++.h>
using namespace std;
void pattern(int n){
    n=2*n;
    for(int i=0;i<=n;i++){
        for(int j=0;j<=n;j++){
            cout<<n/2-(min(min(i,j),min(n-i,n-j)))<<" ";
        }
        cout<<endl;
    }
}
int main()
{
    pattern(4);
    return 0;
}


